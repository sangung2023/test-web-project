generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId    Int       @id @default(autoincrement())
  name      String    @db.VarChar(50)
  email     String    @unique @db.VarChar(100)
  password  String    @db.VarChar(255)
  birthday  DateTime  @db.Date
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  role      UserRole  @default(USER)
  boards    Board[]
  supports  Support[]
  comments  SupportComment[]

  @@map("users")
}

model Board {
  boardId           Int      @id @default(autoincrement())
  userId            Int
  title             String   @db.VarChar(255)
  content           String   @db.Text
  image             String?  @db.Text
  imageName         String?  @db.VarChar(255)
  originalImageName String?  @db.VarChar(255)
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
  user              User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId], map: "boards_userId_fkey")
  @@map("boards")
}

model Support {
  supportId        Int             @id @default(autoincrement())
  userId           Int
  name             String          @db.VarChar(50)
  mobile           String          @db.VarChar(20)
  email            String          @db.VarChar(100)
  title            String          @db.VarChar(255)
  category         SupportCategory
  content          String          @db.Text
  file             String?         @db.Text
  fileName         String?         @db.VarChar(255)
  originalFileName String?         @db.VarChar(255)
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")
  user             User            @relation(fields: [userId], references: [userId], onDelete: Cascade)
  comments         SupportComment[]

  @@index([userId], map: "supports_userId_fkey")
  @@map("supports")
}

model SupportComment {
  commentId   Int      @id @default(autoincrement())
  supportId   Int
  userId      Int
  content     String   @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  support     Support  @relation(fields: [supportId], references: [supportId], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("support_comments")
}

enum SupportCategory {
  PROJECT
  ETC
}

enum UserRole {
  USER
  ADMIN
}
